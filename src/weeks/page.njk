---
pagination:
  data: collections.weeks
  size: 1
  alias: week
layout: week
renderData:
  weeknum: "{{ week.fileSlug }}"
  title: "Week {{ week.fileSlug }}"
eleventyExcludeFromCollections: true
permalink: "/weeks/{{ week.fileSlug }}/"
---

{{ week.templateContent | safe }}

<h2>Notes</h2>
{% for note in collections.notes | inweek(week.fileSlug) %}
<blockquote>
  {{ note.templateContent | safe }}
  <footer><a href="{{ note
  .url }}">{{ note.date | date('MMMM Do, YYYY') }}</a> (week {{ note.date | weeklink | safe }})</footer>
</blockquote>
{% else %}
  No notes.
{% endfor %}

<h2>Writing</h2>
<ul>
{% for post in collections.writing | inweek(week.fileSlug) %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </li>
{% else %}
  <li>Nothing posted.</li>
{% endfor %}
</ul>
