---
layout: base
bodyClass: week
breadcrumbs:
    - weeks
---

<article class="h-entry">

    <div>
        <h1 class="p-name">{{ renderData.title }}</h1>
        <div class="meta">
            {{ renderData.weeknum | weekstart | date('weekstarted') }}

            {% if renderData.weeknum == 0 %}
              (<a href="../1">Next</a>)
            {% else %}
              (<a href="../{{ renderData.weeknum | int - 1 }}">Previous</a>
              {%- if not renderData.current %}
              |
              <a href="../{{ renderData.weeknum | int + 1 }}">Next</a>
              {%- endif %})
            {% endif %}
        </div>
    </div>

    <div class="content">
        <div class="weeknotes">
            {{ content | safe }}
        </div>

        {% for post in collections.writingByWeek[renderData.weeknum] %}
        {% if loop.first %}
          <h2>Writing</h2>
          <ul>
        {% endif %}
            <li>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
        {% if loop.last %}
          </ul>
        {% endif %}
        {% else %}
          <!-- No writing -->
        {% endfor %}
        </ul>

        {% for item in collections.notesByWeek[renderData.weeknum] %}
        {% if loop.first %}
          <h2>{{ loop.length }} Note{{ "s" if loop.length > 1 }}</h2>
        {% endif %}
          {% include "feed-note.njk" %}
        {% else %}
          <!-- No notes -->
        {% endfor %}

    </div>

    {% if steps %}
        Data test: üö∂üèª‚Äç{{ steps }} steps
    {% endif %}

</article>
