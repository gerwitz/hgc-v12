---
layout: base
bodyClass: week
breadcrumbs:
    - weeks
---

<article class="h-entry">

    <div>
        <h1 class="p-name">{{ renderData.title }}</h1>
        <div class="metadata">
            {{ renderData.weeknum | weekstart | date('weekstarted') }}
        </div>
    </div>

    <div class="content">
        <div class="weeknotes">
            {{ content | safe }}
        </div>
        
        {% for note in collections.notes | inweek(renderData.weeknum) %}
        {% if loop.first %}
          <h2>Notes</h2>
        {% endif %}
          <blockquote>
            {{ note.templateContent | safe }}
            <footer><a href="{{ note
            .url }}">{{ note.date | date('MMMM Do, YYYY') }}</a></footer>
          </blockquote>
        {% else %}
          <!-- No notes -->
        {% endfor %}

    </div>

    {% if steps %}
        Data test: 🚶🏻‍{{ steps }} steps
    {% endif %}

</article>
