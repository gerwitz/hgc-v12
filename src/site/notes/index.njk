---
title: Notes
layout: page
tags:
pagination:
  data: collections.microblog
  size: 6
  reverse: true
permalink: /microblog/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber }}/{% endif %}/index.html
eleventyExcludeFromCollections: true
---

{% if pagination.pageNumber > 0 %}
<div class="pagination">
  <a href="{{ pagination.previousPageHref }}">Newer notes</a>
</div>
{% endif %}

{% for note in pagination.items %}
<blockquote>
  {{ note.templateContent | safe }}
  <footer><a href="{{ note.url }}">{{ note.date | date('MMMM Do, YYYY') }}</a></footer>
</blockquote>
{% endfor %}

{% if pagination.nextPageHref %}
<div class="pagination">
  <a href="{{ pagination.nextPageHref }}">Older notes</a>
</div>
{% endif %}
